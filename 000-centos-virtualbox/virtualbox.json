{
    "variables": {
        "PACKER_OS_FLAVOUR": "centos",
        "PACKER_OS_VERSION": "7",
        "PACKER_OS_PURPOSE": "docker",
        "ISO_URL": "http://ftp.icm.edu.pl/pub/Linux/distributions/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
        "ISO_SHA256": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a"
    },
    "builders": [
        {
            "name": "centos",
            "type": "virtualbox-iso",
            "guest_os_type": "RedHat_64",
            "vm_name": "{{ user `PACKER_OS_FLAVOUR` }}.{{ user `PACKER_OS_VERSION` }}-{{ user `PACKER_OS_PURPOSE` }}",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"],
                ["modifyvm", "{{.Name}}", "--audio", "none"]
            ],
            "disk_size": "10240",
            "http_directory": ".",
            "format": "ova",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
            ],
            "shutdown_command": "/sbin/shutdown -h now",
            "ssh_username": "root",
            "ssh_password": "packer",
            "headless": "false",
            "ssh_wait_timeout": "600s",
            "iso_url": "{{ user `ISO_URL` }}",
            "iso_checksum": "{{ user `ISO_SHA256` }}",
            "iso_checksum_type": "sha256"
        }
    ],
   "provisioners": [{
       "type": "shell",
       "inline": [
         "echo Provisioning ....",
         "sleep 30",
	 "yum -y update",
         "yum -y install docker",
         "yum install -y curl",
         "mkdir /tmp/vboxguest",
         "mount -t iso9660 -o loop /root/VBoxGuestAdditions.iso /tmp/vboxguest",
         "yum -y groupinstall 'Development Tools'",
         "cd /tmp/vboxguest",
         "./VBoxLinuxAdditions.run",
         "cd /tmp",
         "umount /tmp/vboxguest",
         "rmdir /tmp/vboxguest",
         "echo Image Provisioned!"
    ]
  }]
}
