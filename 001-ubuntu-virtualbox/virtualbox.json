{
    "variables": {
        "PACKER_OS_FLAVOUR": "ubuntu",
        "PACKER_OS_VERSION": "16.04",
        "PACKER_OS_PURPOSE": "hlf",
        "ISO_URL": "http://releases.ubuntu.com/releases/xenial/ubuntu-16.04.3-server-amd64.iso", 
        "ISO_SHA256": "a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600"
    },
    "builders": [
        {
            "name": "ubuntu",
            "type": "virtualbox-iso",
            "guest_os_type": "Ubuntu_64",
            "vm_name": "{{ user `PACKER_OS_FLAVOUR` }}.{{ user `PACKER_OS_VERSION` }}-{{ user `PACKER_OS_PURPOSE` }}",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"],
                ["modifyvm", "{{.Name}}", "--audio", "none"],
		["modifyvm", "{{.Name}}", "--natpf1", "ssh,tcp,,7222,,22" ]
            ],
            "disk_size": "16384",
            "http_directory": ".",
            "format": "ova",
            "boot_command": [
               "<enter><wait>",
               "<f6><esc>",
               "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
               "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
               "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
               "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
               "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
               "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
               "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
               "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
               "<bs><bs><bs>",
               "/install/vmlinuz ",
               "initrd=/install/initrd.gz ",
               "auto-install/enable=true ",
               "debconf/priority=critical ",
               "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ps.cfg -- ",
               "<enter>"
            ],
            "shutdown_command": "shutdown -h now",
            "ssh_username": "root",
            "ssh_password": "ibm4fun",
            "headless": "false",
            "ssh_wait_timeout": "1100s",
            "iso_url": "{{ user `ISO_URL` }}",
            "iso_checksum": "{{ user `ISO_SHA256` }}",
            "iso_checksum_type": "sha256"
        }
    ],
   "provisioners": [{
       "type": "shell",
       "inline": [
         "echo Provisioning ....",
         "sleep 30",
         "echo Image Provisioned!"
    ]
  }]
}
